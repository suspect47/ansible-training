---
- hosts: ansible2.hl.local
  tasks:
  - name: Creating user "automation" on nodes
    user:
      name: automation
      group: wheel
  
  - name: ssh-key 
    authorized_key:
      user: automation
      state: present
      key: "{{ lookup('file', '/home/automation/.ssh/id_rsa.pub')  }}"

  - name: Insert string in /etc/sudoers for user automation
    blockinfile:
      path: /etc/sudoers
      insertafter: "root"
      block: |
        automation    ALL=(ALL)	ALL
---
